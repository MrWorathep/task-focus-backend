{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "api",
    "paths": {
      "@/*": ["*"]
    },
    "rootDir": "api",
    "outDir": "./dist",
    "moduleResolution": "node",
    "resolveJsonModule": true
  }
}
